<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TilesApp.SACO.SACOTests">
    <ContentPage.Resources>
        <StyleSheet Source="../Assets/style.css"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid Padding="70"  BackgroundColor="#3D3D3D" x:Name="innerGrid">
            <!--<Image 
                Source="Background.png" 
                Aspect="Fill"
            />-->
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button
                x:Name="Test1"
                Text="Test 1"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.Row="0"
            />
            <Button
                x:Name="Test2"
                Text="Test 2"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.Row="1"
            />
            <Button
                x:Name="Test3"
                Text="Test 3"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Grid.Row="2"
            />
        </Grid>
    </ContentPage.Content>
</ContentPage>
