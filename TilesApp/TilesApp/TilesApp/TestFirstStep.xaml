<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TilesApp.TestFirstStep">
    <ContentPage.Content>
        <Grid BackgroundColor="MediumAquamarine">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button x:Name="scanFrame"
                    Text="Scan Frame code"
                    BorderColor="Azure"
                    WidthRequest="100" 
                    HeightRequest="100"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="GoToScan"/>
            <WebView x:Name="pdfViewer" 
                     HorizontalOptions="FillAndExpand"
                     WidthRequest="200" 
                     HeightRequest="200"
                     Grid.Row="1"/>
            <Button x:Name="nextStep"
                    Text="NEXT"
                    BorderColor="Azure"
                    WidthRequest="100" 
                    HeightRequest="100"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Row="2"
                    Clicked="GoToNextStep"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
