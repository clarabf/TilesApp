                                       BorderRadius="5"
                                       HorizontalOptions="StartAndExpand"
                                       VerticalOptions="StartAndExpand"
                                       BackgroundColor="gray"
                                       TextColor="White"
                                       Grid.Row="0"
                                       Padding="0"
                                       Grid.Column="3"
                                       Clicked="Collapsed"/>
                                <Button x:Name="CONTINUE"
