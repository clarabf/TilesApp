                   FontSize="20"
                   Grid.Row="0"
                   Grid.Column="1"/>            
            <Label HorizontalOptions="EndAndExpand"
                   VerticalOptions="Center"
                   Grid.Row="0"
                   FontSize="Small"
                   Grid.Column="2">
