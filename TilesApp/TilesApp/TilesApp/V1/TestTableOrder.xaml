<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TilesApp.V1.TestTableOrder">
    <ContentPage.Resources>
        <StyleSheet  Source="../Assets/style.css"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid  Padding="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="0.05*" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="0.9*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Image Source="logo.png"
                   HeightRequest="120" 
                   WidthRequest="120"
                   Grid.Row="0"
                   Grid.Column="0"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
            <Label Text="YOUR WORK ORDERS"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="20"
                   Grid.Row="0"
                   Grid.Column="1"/>            
            <Label HorizontalOptions="EndAndExpand"
                   VerticalOptions="Center"
                   Grid.Row="0"
                   FontSize="Small"
                   Grid.Column="2">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span FontSize="20" Text="Welcome" />
                            <Span FontSize="20" FontAttributes="Bold" Text=" Trump, D" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <BoxView HeightRequest="1" 
                     Grid.Row="1" 
                     Grid.ColumnSpan="3" 
                     WidthRequest="1"
                     VerticalOptions="End"  
                     HorizontalOptions="FillAndExpand"
                     Color="Black" 
                     Margin="0,0,0,1"/>
            <TableView Intent="Form" Grid.Row="2" Grid.ColumnSpan="3" >
                <TableRoot>
                    <TableSection >
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Label x:Name="Date1"
                                       FontAttributes="Bold"
                                       FontSize="Small"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Text="Date"/>
                                <Label x:Name="WorkOrderID"
                                       FontAttributes="Bold"
                                       FontSize="Small"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       Text="Work Order ID"/>
                                <Label x:Name="CurrentProgress"
                                       FontAttributes="Bold"
                                       FontSize="Small"
                                       Grid.Row="0"
                                       Grid.Column="2"
                                       Text="Current Progress"/>
                                <Label x:Name="Options"
                                       FontAttributes="Bold"
                                       FontSize="Small"
                                       Grid.Row="0"
                                       Grid.Column="3"
                                       Text="Options"/>
                            </Grid>
                        </ViewCell>
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="2*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Label FontAttributes="Bold"
                                       FontSize="Small"
                                       Grid.RowSpan="2"
                                       Grid.Column="0"
                                       HorizontalOptions="StartAndExpand"
                                       VerticalOptions="CenterAndExpand"
                                       Text="Oct. 10th 2019"/>
                                <Label FontAttributes="Bold"
                                       FontSize="Small"
                                       Grid.RowSpan="2"
                                       Grid.Column="1"
                                       HorizontalOptions="StartAndExpand"
                                       VerticalOptions="CenterAndExpand"
                                       Text="3251353"/>
                                <ProgressBar x:Name="pb_ProgressBar" 
                                       Progress="0.6" 
                                       WidthRequest="100"
                                       class="btn-danger"
                                       HorizontalOptions="StartAndExpand"
                                       VerticalOptions="CenterAndExpand"
                                       Grid.RowSpan="2"
                                       Grid.Column="2"/>
                                <Button x:Name="SHOWINFO"
                                       Text="SHOW INFO"
                                       FontSize="Micro"
                                       BorderRadius="5"
                                       HorizontalOptions="StartAndExpand"
                                       VerticalOptions="StartAndExpand"
                                       BackgroundColor="gray"
                                       TextColor="White"
                                       Grid.Row="0"
                                       Padding="0"
                                       Grid.Column="3"/>
                                <Button x:Name="CONTINUE"
                                       Text="CONTINUE"
                                       FontSize="Micro"
                                       Padding="0"
                                       BorderRadius="5"
                                       HorizontalOptions="StartAndExpand"
                                       BackgroundColor="Red"
                                       TextColor="White"
                                       VerticalOptions="StartAndExpand"
                                       Clicked="GoToStep"
                                       Grid.Row="1"
                                       Grid.Column="3"/>
                            </Grid>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
             <Grid Grid.Row="3" Grid.ColumnSpan="3" RowSpacing="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <BoxView HeightRequest="1" Grid.Row="0" 
                             Grid.ColumnSpan="2" WidthRequest="1"
                             VerticalOptions="End"  HorizontalOptions="FillAndExpand"
                             Color="Black"/>

                    <Button x:Name="Logout"
                            Text="LogOut"
                            FontSize="Micro"
                            FontAttributes="Bold"
                            Padding="1"
                            BorderRadius="5"
                            HorizontalOptions="End"
                            BackgroundColor="Red"
                            TextColor="White"
                            VerticalOptions="Center"
                            Clicked="GoToStep"
                            Grid.Row="1"
                            Grid.Column="1"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
