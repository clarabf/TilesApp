<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="TilesApp.Login">
	<ContentPage.Content>
        <Grid Padding="20" BackgroundColor="#2A2A2A" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="0.5*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Image Source="logo.png"
                   HeightRequest="200" 
                   WidthRequest="200"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            <Image Source="Card.png"
                   Grid.Row="1"
                   Grid.RowSpan="3"
                   Grid.Column="0"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="StartAndExpand"/>
            <Label Text="SCAN YOUR &#x0a; CARD TO ACCESS"
                   FontAttributes="Bold"
                   FontSize="Medium"
                   TextColor="White"
                   HorizontalTextAlignment="End"
                   Grid.Row="1"
                   Grid.Column="1"
                   HorizontalOptions="EndAndExpand"
                   VerticalOptions="CenterAndExpand" />
            <Button FontAttributes="Bold"
                    FontSize="Medium"
                    WidthRequest="200"
                    Text="GO TO &#x0a; SCANNER"
                    class="btn-gray"
                    Padding="4"
                    BorderRadius="10"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    VerticalOptions="CenterAndExpand"
                    Clicked="GoToScan">
            </Button>
        </Grid>
	</ContentPage.Content>
</ContentPage>
